<div class="container">
  <div class="row">
    <div class="col-10 mt-5">
      <h1>注文情報確認画面</h1>
    </div>
    <div class="col-6 mt-5">
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <% total = 0 %>
        <% @cart_items.each do |cart_item| %>
        <% total += cart_item.subtotal %>
        <tbody>
          <tr>
            <td>
                <%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-4 mt-5">
      <table class="table table-bordered">
        <tbody>
          <thead class="thead-light">
          <tr>
            <th>送料</th>
              <td>¥<%= @order.postage.to_s(:delimited) %></td>
            </tr>
          <tr>
            <th>商品合計</th>
               <td>¥<%= total.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th>請求金額</th>

              <td>¥<%= (total + @order.postage).to_s(:delimited) %></td>
           </tr>
        </tbody>
      </table>
    </div>
    <div class="col-8">
      <strong>支払方法</strong>
      <span class="ml-5"><%= @order.payment_method_i18n %></span>
    </div>
    <div class="col-8 mt-3">
      <strong>お届け先</strong>
        <span class="ml-5">〒<%= @order.post_code %></span>
        <span><%= @order.address %></span>
        <span><%= @order.name %></span>
    </div>

    <div class="col-6 mx-auto mt-3 mb-3">
      <%= form_with model: @order, url: public_orders_path, method: :post do |f| %>
      <%= f.hidden_field :customer_id, :value => @current_customer_id %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :post_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :total_payment, :value => (total + @order.postage).to_s %>
      <%= f.submit "注文を確定する", class: "btn btn-success mt-3" %>
      <% end %>
    </div>
  </div>
</div>