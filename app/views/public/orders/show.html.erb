<div class="container">
  <div class="row">
    <div class="col-12 mt-5">
      <h1>注文履歴詳細</h1>
    </div>
    <div class="col-6 mt-5">
      <table class="table table-bordered">
        <h4 class="mb-3">注文情報</h4>
        <tbody>
          <thead class="thead-light" %>
          <tr>
            <th style="width: 30%">注文日</th>
              <td style="width: 70%"><%= order.created_at.strftime("%Y年%m月%d日") %></td>
            </tr>
          <tr>
            <th>配送先</th>
              <td><%= order.address.address_display %><br>
                  <%= order.name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
              <td><%= @order.payment_method %></td>
           </tr>
           <tr>
            <th>ステータス</th>
              <td><%= order.status_i18n %></td>
           </tr>
        </tbody>
      </table>
    </div>
    <div class="col-5 mt-5">
      <table class="table table-bordered">
        <h4 class="mb-3">請求情報</h4>
        <tbody>
          <thead class="thead-light">
          <tr>
            <th style="width: 50%">商品合計</th>
              <td style="width: 50%">円</td>
            </tr>
          <tr>
            <th>配送料</th>
              <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求金額</th>
              <td><</td>
           </tr>
        </tbody>
      </table>
    </div>
    <div class="col-10 mt-5 mb-5">
      <table class="table table-bordered">
        <h4 class="mb-3">注文内容</h4>

        <thead class="thead-light">
          <tr>
            <th style="width: 50%">商品</th>
            <th style="width: 20%">単価（税込）</th>
            <th style="width: 10%">個数</th>
            <th style="width: 15%">小計</th>
          </tr>
        </thead>
        <% @order.order_details.each do |order_detail| %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
