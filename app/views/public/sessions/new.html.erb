
<div class="container">
  <div class="row">
    <div class="col-10 mt-5 mb-5">
      <h1 style="background-color: rgba(0, 0, 0, 0.075); padding-left: 20px; padding-right: 20px; display: inline-block;">ログイン</h1>
    </div>
    <div class="col-8 ml-5">
      <h4 style="background-color: rgba(0, 0, 0, 0.075); padding-left: 20px; padding-right: 20px; display: inline-block;">会員の方はこちらからログイン</h4>
    </div>
    <div class="col-8 mx-auto">
    <%= form_with model: @customer, url: session_path(resource_name) do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width: 30%"><%= f.label :email, "メールアドレス" %></td>
          <td colspan="3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", style: "width: 70%" %></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード %></td>
          <td colspan="3"> <%= f.password_field :password, autocomplete: "current-password", style: "width: 70%" %></td>
        </tr>
        <tr>
          <td></td>
          <td>
          <div class="col-8 mt-3 mb-2">
            <%= f.submit "ログイン", class: "btn btn-primary", style: "width: 60%; font-size: 20px;" %>
          </div>
          </td>
        </tr>
      </tbody>
    </table>
    <% end %>
    </div>
    <div class="col-8 mt-3 mb-3">
      <h4 style="background-color: rgba(0, 0, 0, 0.075); padding-left: 20px; padding-right: 20px; display: inline-block;">会員登録がお済みでない方</h4>
      <h5 class="ml-5 pl-5 mt-3"><%= link_to " こちら ", new_customer_registration_path %>から新規登録を行ってください。</h5>
    </div>