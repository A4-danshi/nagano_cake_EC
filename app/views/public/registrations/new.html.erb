<div class="container">
  <div class="row">
    <div class="col-10 mt-5 mb-5">
      <h1 style="background-color: rgba(0, 0, 0, 0.075); padding-left: 20px; padding-right: 20px; display: inline-block;">新規会員登録</h1>
    </div>
    <div class="col-10 mx-auto">
    <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <td style="width: 20%">名前</td>
          <td style="width: 5%; text-align: right">(姓)</td>
          <td style="width: 20%"><%= f.text_field :last_name, placeholder: "令和",autofocus: true %></td>
          <td style="width: 5%; text-align: right">(名)</td>
          <td style="width: 20%"><%= f.text_field :first_name, placeholder: "道子" %></td>
        </tr>
        <tr>
          <td style="width: 20%">フリガナ</td>
          <td style="width: 10%; text-align: right;">(セイ)</td>
          <td style="width: 20%"><%= f.text_field :kana_last_name, placeholder: "レイワ" %></td>
          <td style="width: 10%; text-align: right;">(メイ)</td>
          <td style="width: 20%"><%= f.text_field :kana_first_name, placeholder: "ミチコ" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :post_code, "郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :post_code, placeholder: "0000000" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 100%" %></td>
        </tr>
        <tr>
          <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
          <td></td>
          <td><%= f.text_field :phone_number, placeholder: "0000000000" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
          </td>
          <td></td>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :パスワード（確認用） %></td>
          <td></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td>
          <div class="mt-3 mb-2">
            <%= f.submit "新規登録", class: "btn btn-sm btn-success", style: "width: 80%; font-size: 20px;" %>
          </div>
          </td>
          <td></td>
        </tr>
      </tbody>
    </table>
    <% end %>
    </div>
    <div class="col-8 mt-3 mb-3">
      <h2 style="background-color: rgba(0, 0, 0, 0.075); padding-left: 20px; padding-right: 20px; display: inline-block;">すでに登録済みの方</h2>
      <h5 class="ml-5 pl-5 mt-3"><%= link_to " こちら ", new_customer_session_path %>からログインしてください。</h5>
    </div>