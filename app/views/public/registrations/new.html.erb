<h2>新規会員登録</h2>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="field">
      <span>名前</span>
      <%= f.label :last_name, "（姓）" %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
      <%= f.label :first_name, "（名）" %>
      <%= f.text_field :first_name, placeholder: "道子" %>
    </div>

    <div class="field">
      <span>フリガナ</span>
      <%= f.label :kana_last_name, "(セイ)" %>
      <%= f.text_field :kana_last_name, placeholder: "レイワ" %>
      <%= f.label :kana_first_name, "(メイ)" %>
      <%= f.text_field :kana_first_name, placeholder: "ミチコ" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
    </div>

    <div class="field">
      <%= f.label :郵便番号（ハイフンなし） %>
      <%= f.text_field :post_code, placeholder: "0000000" %>
    </div>

    <div class="field">
      <%= f.label :住所 %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %>
      <%= f.text_field :phone_number, placeholder: "0000000000" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード（確認用） %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="log_in">
    <p>すでに登録済みの方</p>
    <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
  </div>
