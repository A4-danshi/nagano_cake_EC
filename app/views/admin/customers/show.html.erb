<div class="container p-5">
  <div>
    <div>
      <h2 class="bg-light"><%= @customer.last_name + @customer.first_name %>さんの会員詳細</h2>
      <div>
        <table class="table">
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id %></td>
            </tr>
            <tr>
              <td>氏名</td>
              <td><%= @customer.last_name + @customer.first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= @customer.kana_last_name + @customer.kana_first_name %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.post_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.phone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td><%= @customer.is_deleted %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>