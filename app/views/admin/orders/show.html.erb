<div class="container p-5">
  <div>
    <div>
      <h2 class="bg-light">注文履歴詳細</h2>
      <div>
        <%= form_with model: @order, url: admin_order_path do |f| %>
          <table class="table table-borderless">
            <tbody>
              <tr>
                <th>購入者</th>
                <td><%= @order.customer.last_name + @order.customer.first_name %></td>
              </tr>
              <tr>
                <th>注文日</th>
                <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
                <th>配送先</th>
                <td>
                  〒<%= @order.post_code %><span><%= @order.address %></span><br>
                  <%= @order.name %>
                </td>
              </tr>
              <tr>
                <th>支払方法</th>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
              <tr>
                <th>注文ステータス</th>
                <td><%= f.select :status, Order.statuses_i18n.invert, {} %></td>
                <td><%= f.submit "更新", class:"btn btn-success" %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
        <table>
          <thead class="bg-light">
            <tr>
              <th>商品名</th>
              <th>単価（税込）</th>
              <th>数量</th>
              <th>小計</th>
              <th>製作ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.purchase_price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.purchase_price * order_detail.amount %></td>
              <td>
                <%= form_with model: order_detail, url: admin_order_detail_path(order_detail) do |f| %>
                <%= f.select :production_status, OrderDetail.production_statuses_i18n.invert, {} %>
                <%= f.submit "更新", class:"btn btn-success" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <% end %>
        <table>
          <tr>
            <th>商品合計</th>
            <td><%= (@order.total_payment - @order.postage).to_s(:delimited) %>&nbsp;円</td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= @order.postage.to_s(:delimited) %>円</td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <th><%= @order.total_payment.to_s(:delimited) %>円</th>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>