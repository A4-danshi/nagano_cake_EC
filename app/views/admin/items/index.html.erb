<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 offset-md-1 mb-5'>
      <div class="row m-5 align-items-center">
        <h2 class="bg-light">&nbsp;商品一覧&nbsp;</h2>
        <div class="m-3 ml-auto">
          <%= link_to "新規作成", new_admin_item_path, class: "btn btn-primary" %>
        </div>
      </div>
      <table class='table'>
        <thead class="bg-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name,admin_item_path(item) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_sale == true %>
                <td><%= "販売中" %></td>
              <% else %>
                <td><%= "販売停止中" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>